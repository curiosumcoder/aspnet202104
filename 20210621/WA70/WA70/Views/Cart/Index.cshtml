@model WA70.ViewModels.CartViewModel


@if (Model != null && Model.Items.Any())
{

    <ul>
        @foreach (var p in Model.Items)
        {
            <li>
                @p.ProductName, @(p.UnitPrice ?? 0)
            </li>
        }
    </ul>
    <p>Items Count: <strong>@Model.Count</strong></p>
    <p>Items Total: <strong>$ @Model.Total</strong></p>
}
else
{
    <h3>Your cart is empty! :-(</h3>
}