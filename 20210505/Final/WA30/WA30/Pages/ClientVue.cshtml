@page
@model WA30.Pages.ClientVueModel
@{
}

<div class="container" id="app">
    <h2>Index</h2>

    <form class="form-inline" v-on:submit.prevent="search">
        <input v-model="filter" placeholder="Type filter here" />
        <button>Search</button>
    </form>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>QuantityPerUnit</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Category</th>
                <th>Supplier</th>
            </tr>
        </thead>
        <tbody>
            <template v-for="item in Object.keys(items)">
                <tr><td colspan="6"><strong>{{item}}</strong></td></tr>
                <tr v-for="p in items[item]">
                    <td>{{p.productName}}</td>
                    <td>{{p.quantityPerUnit}}</td>
                    <td>{{p.unitPrice}}</td>
                    <td>{{p.unitsInStock}}</td>
                    <td>{{p.category.categoryName}}</td>
                    <td>{{p.supplier.companyName}}</td>
                </tr>
            </template>
        </tbody>
    </table>
</div>

<script src="~/lib/vue/vue.global.js"></script>
<script src="~/js/app.js"></script>
